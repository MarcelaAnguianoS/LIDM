<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumenCalendar">

    <TextView
        android:id="@+id/de2View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="de"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaView"
        app:layout_constraintStart_toEndOf="@+id/mesView" />

    <TextView
        android:id="@+id/diaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18" />

    <TextView
        android:id="@+id/deView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="de"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaView"
        app:layout_constraintStart_toEndOf="@+id/diaView" />

    <TextView
        android:id="@+id/mesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/deView"
        app:layout_constraintStart_toEndOf="@+id/deView"
        android:textStyle="bold"
        tools:text="Diciembre" />


    <TextView
        android:id="@+id/anyoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/de2View"
        app:layout_constraintStart_toEndOf="@+id/de2View"
        android:textStyle="bold"
        tools:text="2021" />

    <ImageView
        android:id="@+id/lineaView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mesView"
        app:srcCompat="@android:color/background_dark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/analisis_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineaView"/>



</androidx.constraintlayout.widget.ConstraintLayout>